services:
  # Map handler service
  mapgen:
    build:
      context: ./src/MapService
      image: ghcr.io/${IMAGE_NAME}/mapgen:latest

  # Image generation service
  imggen:
    build:
      context: ./src/ImageService
      image: ghcr.io/${IMAGE_NAME}/imggen:latest
    volumes:
      - imggen-public:/app/public

  # NGINX API Gateway
  nginx:
    build:
      context: ./src/nginx
    ports:
      - "8080:80"
    depends_on:
      - mapgen
      - imggen
    volumes:
      - imggen-public:/app/public

volumes:
  imggen-public:
